{
  "name": "construct-scheduler",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "commit": "node scripts/auto-commit.js",
    "commit:ps": "powershell -ExecutionPolicy Bypass -File scripts/auto-commit.ps1",
    "commit:no-push": "powershell -ExecutionPolicy Bypass -File scripts/auto-commit.ps1 -NoPush",
    "save": "npm run format && npm run lint && npm run commit:ps",
    "save:no-push": "npm run format && npm run lint && npm run commit:no-push",
    "qa:console": "start-server-and-test dev http://localhost:5173/ \"playwright test\"",
    "update:latest": "npx npm-check-updates -u && npm install",
    "dev:latest": "npm run update:latest && npm run dev",
    "check:updates": "npx npm-check-updates",
    "clean:start": "rm -rf node_modules && npm install && npm run dev",
    "start:both": "./scripts/start-servers.sh"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.55.0",
    "@tailwindcss/postcss": "^4.1.11",
    "chart.js": "^4.5.0",
    "d3": "^7.9.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "latest",
    "react-chartjs-2": "^5.3.0",
    "react-color": "^2.19.3",
    "react-dom": "latest",
    "react-quill": "^2.0.0",
    "react-resizable-panels": "^3.0.4",
    "react-router-dom": "^7.8.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.0.13",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "vite": "latest"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "description": "A modern project planning and scheduling application built with React, Vite, and Tailwind CSS.",
  "main": "eslint.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
